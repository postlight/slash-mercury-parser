{
  "name": "serverless-mercury-slackbot",
  "version": "1.0.1",
  "main": "src/handler.js",
  "license": "MIT",
  "scripts": {
    "deploy:env": "sls deploy --stage production",
    "deploy": "export NODE_ENV=dev && yarn deploy:env",
    "deploy:production": "export NODE_ENV=production && yarn deploy:env",
    "deploy:stage": "export NODE_ENV=stage && yarn deploy:env",
    "lint": "tslint -c tslint.json --fix './src/**/*.ts' && eslint ./src --fix",
    "precommit": "lint-staged",
    "serve": "serverless offline start",
    "serve:watch": "nodemon -e js,ts,jsx,tsx -x serverless offline start",
    "tail:parse": "serverless logs --function parse --tail",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "serverless webpack",
    "watch:parse": "serverless invoke local --watch --function parse --path fixtures/event.json",
    "watch:warm": "serverless invoke local --watch --function parse --path fixtures/scheduled.json"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "@types/jest": "^24.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.0.0",
    "jest": "^23.5.0",
    "lint-staged": "^8.0.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.14.2",
    "serverless": "^1.32.0",
    "serverless-offline": "^4.8.1",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "webpack": "^4.17.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.0.0",
    "@types/aws-lambda": "^8.10.21",
    "@types/dotenv": "^6.1.0",
    "@types/qs": "^6.5.2",
    "@types/request": "^2.48.1",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.417.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "qs": "^6.6.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint",
      "prettier --write",
      "git add"
    ]
  }
}
